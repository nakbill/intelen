{% extends 'base.html.twig' %}

{% block title %}Intelen CRUD Project!{% endblock %}

{% block body %}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-4 mb-3">
                            <a href="{{ path('country_add_edit') }}" class="btn btn-primary btn-block">Add a Country</a>
                        </div>
                        <div class="col-12 col-md-4 mb-3">
                            <a href="{{ path('author_add_edit') }}" class="btn btn-primary btn-block">Add an Author</a>
                        </div>
                        <div class="col-12 col-md-4 mb-3">
                            <a href="{{ path('book_add_edit') }}" class="btn btn-primary btn-block">Add a Book</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mt-5">
                <div class="card-body">
                    <h5>Book List</h5>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>Publish Year</th>
                            <th>Author</th>
                            <th>Εκδότης</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for book in books %}
                            <tr>
                                <td>{{ book.title }}</td>
                                <td>{{ book.publicationYear }}</td>
                                <td>{{ book.author.name}} {{ book.author.surName }}</td>
                                <td>{{ book.title }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
</div>
{% endblock %}
