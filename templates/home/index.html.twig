{% extends 'base.html.twig' %}

{% block title %}Intelen CRUD Project!{% endblock %}

{% block body %}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-4 mb-3">
                            <a href="{{ path('country_add_edit') }}" class="btn btn-primary btn-block">Add a Country</a>
                        </div>
                        <div class="col-12 col-md-4 mb-3">
                            <a href="{{ path('author_add_edit') }}" class="btn btn-primary btn-block">Add an Author</a>
                        </div>
                        <div class="col-12 col-md-4 mb-3">
                            <a href="{{ path('book_add_edit') }}" class="btn btn-primary btn-block">Add a Book</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mt-5">
                <div class="card-body">
                    {% include './author/modules/list.html.twig' with {'authors': authors } %}
                    {% include './country/modules/list.html.twig' with {'countries': countries } %}
                </div>
            </div>
        </div>
    </div>

</div>
</div>
{% endblock %}
